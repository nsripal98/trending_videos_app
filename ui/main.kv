#:kivy 2.1.0

MDScreen:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: "000000"

        # Top Bar
        MDTopAppBar:
            title: "Trending by Videos"
            right_action_items: [["refresh", lambda x: app.load_trending_videos()]]
            md_bg_color: "1a1f2b"
            specific_text_color: "ffffff"

        # Main Content
        MDScrollView:
            MDGridLayout:
                id: video_grid
                cols: 2
                padding: "8dp"
                spacing: "8dp"
                adaptive_height: True

                # Video Cards will be added here dynamically

        # Bottom Navigation
        MDBottomNavigation:
            panel_color: "1a1f2b"
            selected_color_background: "334455"

            MDBottomNavigationItem:
                name: 'explore'
                text: 'Explore'
                icon: 'compass'
                
            MDBottomNavigationItem:
                name: 'trending'
                text: 'Trending'
                icon: 'trending-up'
                
            MDBottomNavigationItem:
                name: 'region'
                text: 'Region'
                icon: 'map-marker'
                
            MDBottomNavigationItem:
                name: 'search'
                text: 'Search'
                icon: 'magnify'
                
            MDBottomNavigationItem:
                name: 'account'
                text: 'Account'
                icon: 'account'